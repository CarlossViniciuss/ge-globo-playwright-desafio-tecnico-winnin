{
  "name": "ge-globo-playwright-desafio-tecnico-winnin",
  "version": "1.0.0",
  "description": "Testes automatizados para o site ge.globo.com usando Playwright",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:headed": "cucumber-js --format @cucumber/pretty-formatter",
    "test:debug": "cucumber-js --format @cucumber/pretty-formatter --tags @debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "report:generate": "node generate-html-report.js",
    "report:open": "open cucumber_report.html"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "cucumber-html-reporter": "^7.2.0",
    "eslint": "^9.27.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
